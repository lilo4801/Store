<p>Name of book : <%= @book.namebook %> </p>
<p>Name of author :<%= @book.nameauthor %> </p>
<p>Price :<%= @book.price%> </p>
<p>Description:<%= @book.description %> </p>
<p>Sold By  <%= @book.user.mail%> </p>
<%= image_tag(@book.image_url(:default)) %>
<% if product_author(@book)%>
<%= link_to 'Delete', product_path, method: :delete, data: { confirm: "Are you sure ?" } %>
<%= link_to "Edit",edit_product_path(@book)%>
<% end %>
